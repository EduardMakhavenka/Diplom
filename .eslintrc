{
  "extends": "airbnb/base",
  "rules": {
    "no-use-before-define": ["error", { "functions": false }],
    "no-console":0,
    "linebreak-style": 0,
    "consistent-return": 0,
    "max-len": [2, {
      "code": 180,
      "tabWidth": 2,
      "ignoreUrls": true
    }]
  },
  "env": {
    "mocha": true
  }
}